{% extends 'base.html.twig' %}

{% block title %}Проекты{% endblock %}

{% block body %}
    <h1>Проекты</h1>

    <a href="{{ path('app_project_new') }}">Создать новый</a> <br/><br/>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Название</th>
                <th>Заказчик</th>
                <th>Исполнители</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td>{{ project.id }}</td>
                <td>{{ project.name|capitalize }}</td>
                <td>{{ project.customer }}</td>
                <td>
                    {% for developer in project.developers %}
                        {{ developer }} <br/>
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('app_project_show', {'id': project.id}) }}">Показать</a>
                    <a href="{{ path('app_project_edit', {'id': project.id}) }}">Изменить</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
