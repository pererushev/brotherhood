{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
    <h1>Проект</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Название</th>
                <td>{{ project.name|capitalize }}</td>
            </tr>
            <tr>
                <th>Заказчик</th>
                <td>{{ project.customer }}</td>
            </tr>
            <tr>
                <th>Исполнители</th>
                <td>
                {% for developer in project.developers %}
                    {{ developer.name }} <br/>
                {% endfor %}
                
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_project_index') }}">Обратно к списку</a> <br/>

    <a href="{{ path('app_project_edit', {'id': project.id}) }}">Редактировать</a> <br/> <br/>

    {{ include('project/_delete_form.html.twig') }}
{% endblock %}
